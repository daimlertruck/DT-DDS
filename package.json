{
  "name": "dt-dds",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/react-packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "changesets:add": "node scripts/changeset-plugin --add-changesets",
    "changesets:ci": "yarn changesets:add && yarn changesets:version && yarn changesets:tag",
    "changesets:tag": "node scripts/changeset-plugin --add-tag",
    "changesets:version": "changeset version --preid beta",
    "clean": "turbo run clean && rm -rf node_modules",
    "dev": "turbo run dev --no-cache --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "generate:component": "turbo gen new-component-package",
    "lint": "turbo run lint",
    "release": "turbo run build --filter=docs^... && changeset publish",
    "test": "turbo run test",
    "test:update": "turbo run test -- -u",
    "prepare": "husky",
    "check-pkg-deps": "node scripts/check-pkg-deps/index.cjs"
  },
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@manypkg/get-packages": "^3.1.0",
    "@turbo/gen": "^1.11.3",
    "eslint-config-custom": "*",
    "husky": "^9.1.7",
    "prettier": "^2.8.0",
    "turbo": "^2.0.6"
  },
  "packageManager": "yarn@1.22.19",
  "engines": {
    "node": ">=22"
  },
  "resolutions": {
    "esbuild": "^0.25.10"
  }
}
